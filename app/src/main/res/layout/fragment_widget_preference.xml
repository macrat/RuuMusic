<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="jp.blanktar.ruumusic.client.PlayerPreferenceFragment">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:divider="@drawable/preference_divider"
		android:showDividers="middle">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/preference_text_size"
				android:text="Unified widget: Directory path size" />

			<SeekBar
				android:id="@+id/unified_path_size_seekbar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:max="30" />

			<TextView
				android:id="@+id/unified_path_size_sample"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="/path/to/music/"
				android:gravity="center" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/preference_text_size"
				android:text="Unified widget: Music name size" />

			<SeekBar
				android:id="@+id/unified_name_size_seekbar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:max="30" />

			<TextView
				android:id="@+id/unified_name_size_sample"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="music name"
				android:gravity="center" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/preference_text_size"
				android:text="Music name widget: Music name size" />

			<SeekBar
				android:id="@+id/musicname_name_size_seekbar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:max="40" />

			<TextView
				android:id="@+id/musicname_name_size_sample"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="music name"
				android:gravity="center" />
		</LinearLayout>
	</LinearLayout>
</android.support.v4.widget.NestedScrollView>

