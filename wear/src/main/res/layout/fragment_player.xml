<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				tools:context="jp.blanktar.ruumusic.wear.PlayerFragment"
				android:background="@android:color/transparent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@android:color/transparent">

		<TextView
			android:id="@+id/musicPath"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/player_text_margin"
			android:textSize="@dimen/music_path_size"
			android:textAlignment="center"
			android:background="@android:color/transparent" />

		<TextView
			android:id="@+id/musicName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/player_text_margin"
			android:textAlignment="center"
			android:textSize="@dimen/music_name_size"
			android:background="@android:color/transparent" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center|bottom"
			android:background="@android:color/transparent">

			<ImageButton
				android:id="@+id/prev"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="@dimen/button_padding"
				android:background="@null"
				android:src="@drawable/ic_prev" />

			<ImageButton
				android:id="@+id/playpause"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@null"
				android:padding="@dimen/button_padding"
				android:src="@drawable/ic_play" />

			<ImageButton
				android:id="@+id/next"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="@dimen/button_padding"
				android:background="@null"
				android:src="@drawable/ic_next" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center"
			android:background="@android:color/transparent">

			<ImageButton
				android:id="@+id/shuffle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="@dimen/button_padding"
				android:background="@null"
				android:src="@drawable/ic_shuffle_on" />

			<ImageButton
				android:id="@+id/repeat"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="@dimen/button_padding"
				android:background="@null"
				android:src="@drawable/ic_repeat_one" />
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
